# Variables de entorno para el backend
# Copia este archivo como .env y configura los valores apropiados

# Puerto del servidor
PORT=3000

# Clave secreta para autenticación de API
# Genera una clave única ejecutando: node utils/create_secretkey.js
SECRET_KEY=tu_clave_secreta_aqui

# Configuración de la base de datos MongoDB
# URL de conexión a MongoDB (local o remota)
MONGO_URI=mongodb://localhost:27017/react-bootstrap-daw

# Nombre de la base de datos
DB_NAME=react-bootstrap-daw

# Configuración opcional de MongoDB Atlas (si usas cloud)
# MONGO_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/react-bootstrap-daw?retryWrites=true&w=majority

# Configuración de desarrollo
NODE_ENV=development
